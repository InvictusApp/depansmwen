<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="366.18dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_background"
                android:padding="15dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="33.618dp"
                    android:layout_marginStart="33.618dp"
                    android:gravity="center"
                    android:text="@string/add_cash"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="33.618dp"
                    android:layout_height="33.618dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_close"
                    app:tint="@color/secondary"
                    android:contentDescription="@string/close_button_add_cash" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/layoutHeader">

                <TextView
                    android:id="@+id/cash_add_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/cash_add_description"
                    android:textSize="16.18sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary"
                    android:textAllCaps="true"
                    android:paddingTop="16.18dp"/>

                <EditText
                    android:id="@+id/cash_add_description_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    app:layout_constraintTop_toBottomOf="@id/cash_add_description"
                    android:autofillHints="Description"
                    tools:ignore="LabelFor"
                    />

                <TextView
                    android:id="@+id/cash_add_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cash_add_description_area"
                    android:text="@string/cash_add_amount"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary"
                    android:textAllCaps="true"
                    android:paddingTop="16.18dp"/>

                <EditText
                    android:id="@+id/cash_add_amount_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    app:layout_constraintTop_toBottomOf="@id/cash_add_amount"
                    android:autofillHints="Montant" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button"
                    android:text="Ajouter"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/cash_add_amount_area"
                    tools:layout_editor_absoluteX="0dp"
                    android:textAllCaps="true"
                    android:textSize="16.18sp" />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>